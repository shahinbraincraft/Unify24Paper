<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meishe.fxplugin">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".MSApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".utils.permission.PermissionsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAnimationTheme" />
        <activity android:name=".MediaSelectActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAnimationTheme" />
        <activity android:name=".MediaEditActivity"
            android:screenOrientation="portrait"
            android:theme="@style/BaseAnimationTheme" />
    </application>

</manifest>